@model List<AcunMedyaPortfolioProject.Models.Expertise>
@{
    ViewBag.Title = "ExpertiseTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Uzmanlık Kontrol Paneli</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uzmanlık Alanı</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expertise in Model)
            {
                <tr>
                    <td>@expertise.Id</td>
                    <td>@expertise.Text</td>
                    <td><a href="/Expertise/UpdateExpertise/@expertise.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Expertise/DeleteExpertise/@expertise.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Expertise/CreateExpertise" class="btn btn-primary">Yeni Uzmanlık Ekle</a>

</div>

