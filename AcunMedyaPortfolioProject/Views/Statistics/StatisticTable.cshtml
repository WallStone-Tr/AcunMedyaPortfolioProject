
@{
    ViewBag.Title = "StatisticTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İstatistik Tablosu</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>İstatistikler</th>
                <th>Sayısı</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Toplam Proje Sayısı</td>
                <td>@ViewBag.Totalprojects</td>
            </tr>
            <tr>
                <td>Toplam Deneyimler</td>
                <td>@ViewBag.TotalExperiences</td>
            </tr>
            <tr>
                <td>Toplam Yorumlar</td>
                <td>@ViewBag.totalTestimonials</td>
            </tr>
        </tbody>
    </table>
    </div>